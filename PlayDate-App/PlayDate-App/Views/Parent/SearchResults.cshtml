@model IEnumerable<PlayDate_App.Models.Parent>

@{
    ViewData["Title"] = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search Results</h1>
<head>
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 75%;
            border-radius: 5px;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        img {
            border-radius: 5px 5px 0 0;
        }

        .container {
            padding: 2px 16px;
        }


    </style>
</head>
<div class="col-md-6 p-3">
    <hr />
    @foreach (var parent in Model)
    {
        <div class="card mb-4">
            <a class=" text-dark" asp-area="" asp-controller="Parent" asp-route-id="@parent.ParentId" asp-action="Details"><h3><b>@Html.DisplayFor(modelParent => parent.LastName) Family</b></h3></a>
            <img src="@parent.ImagePath" alt="Family Photo" style="width:100%">
            <div class="container">
                <h4><b>Our Profile</b></h4>
                <dl class="row">
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelParent => parent.FirstName) |
                        @if (parent.SpouseName != null)
                        {
                            @Html.DisplayFor(modelParent => parent.SpouseName)

                        }
                    </dd>
                    <dt class="col-sm-6">Kids:</dt>
                    <dd class="col-sm-10">
                        This is where kids + their info goes
                    </dd>
                    <dt class="col-sm-6">Thumbs Up:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelParent => parent.ThumbsUp)
                    </dd>
                    <dd class="col-sm-10">
                        @if (ViewBag.FoundFriends.Contains(parent))
                        {
                            <button onclick='logictobutton' class='btn btn-primary mt-3 btn-block'>Current Friend</button>
                        }
                        else if (ViewBag.FoundRequests.Contains(parent))
                        {
                            <button onclick='logictobutton' class='btn btn-secondary mt-3 btn-block'>Request Sent</button>
                        }
                        else
                        {
                            <button onclick='logictobutton' class='btn btn-danger mt-3 btn-block'>Send Request</button>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    }
</div>
